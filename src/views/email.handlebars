<html>
<style>
    .logo-container {
        display: flex;
        justify-content: center;
        margin-bottom: 2.5em;
    }

    .logo {
        width: 20%;
    }

    .item-list {
        display: flex;
        flex-wrap: wrap;
        width: 100%;
        justify-content: center;
    }

    .item {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 0.25rem;
        text-align: center;
        text-decoration: none;
        font-weight: 700;
        font-size: medium;
        color: black;
        position: relative;
    }

    .item>.bottom-overlay {
        width: 100%;
        border-bottom-left-radius: 0.95rem;
        border-bottom-right-radius: 0.95rem;
        height: 65%;
        position: absolute;
        bottom: 0;
        background: linear-gradient(rgb(0, 0, 0, 0), rgb(0, 0, 0, 0.9));
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-end;
        color: rgba(255, 255, 255, 0.99);
    }

    .item>.bottom-overlay>.title {
        max-width: 70%;
        margin-bottom: 0;
    }

    .item>.mediatype-overlay {
        position: absolute;
        width: 100%;
        margin: 0 1em;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
    }

    .item>.mediatype-overlay>.movie {
        background-color: #3A82F6;
        border-radius: 5em;
        padding: 0.2em;
        width: 25%;
        margin: 1em;
        text-align: center;
        color: rgba(255, 255, 255, 0.99);
    }

    .item>.mediatype-overlay>.show {
        background-color: #9333EA;
        border-radius: 5em;
        padding: 0.2em;
        width: 25%;
        margin: 1em;
        text-align: center;
        color: rgba(255, 255, 255, 0.99);
    }

    .item>.mediatype-overlay>.added {
        width: 10%;
        margin: 1em;
    }

    .item>.bottom-overlay>.overview {
        display: -webkit-box;
        font-size: small;
        font-weight: 300;
        color: rgba(255, 255, 255, 0.8);
        max-width: 95%;
        text-overflow: ellipsis;
        overflow: hidden;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 3;
        margin-bottom: 8%;
    }

    .item>img {
        border-radius: 1rem;
        filter: drop-shadow(1px 1px 4px rgba(0, 0, 0, 0.7));
        max-width: fit-content;
        position: relative;
    }
</style>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>Welcome Email</title>
    <link href="https://cdn.jsdelivr.net/npm/@mdi/font@6.9.96/css/materialdesignicons.min.css" />
</head>

<body>
    <div class="logo-container">
        <img src="{{logo}}" class="logo" />
    </div>
    <div class="item-list">
        {{#each itemList}}
        <a class="item" href="{{this.url}}">
            <img src="{{this.posterPath}}" />
            <div class="bottom-overlay">
                <p class="title">{{this.title}}</p>
                <p class="overview">{{this.overview}}</p>
            </div>
            <div class="mediatype-overlay">
                {{#if this.title}}
                <p class="movie">MOVIE</p>
                {{else}}
                <p class="show">SERIES</p>
                {{/if}}
                {{#if this.isAdded}}
                <span class="added">
                    <img
                        src='data:image/png;base64,' />
                </span>
                {{/if}}
            </div>
        </a>
        {{/each}}
    </div>
</body>

</html>